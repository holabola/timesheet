<!-- Where all the magic happens -->
<!-- LOGIN FORM -->
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="text-center" id = "offBut" style="padding:50px 0 0 0">

      <!-- Main Form -->
      <div class="login-form-1">
        <div id="loginWrap"" >

        <div class="logo">login</div>
        <a href="#" class="glyphicon glyphicon-remove-circle exitButton" ></a>
        <form id="login-form" class="text-left">
          <div class="login-form-main-message"></div>

          <div class="main-login-form">
            <div class="login-group">

              <div class="form-group">

                <%= f.email_field :email, placeholder: "Email", class: 'form-control', autofocus: true %>
              </div>

              <div class="form-group">


                <%= f.password_field :password, placeholder: "Password", class: 'form-control', autocomplete: "off" %>

              </div>
              <div style="line-height:50%;">
                <br>
              </div>
              <div class="form-group login-group-checkbox">
                <input type="checkbox" id="lg_remember" name="lg_remember">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>

              </div>
              <%= button_tag(type: "submit", class: "login-button") do %>
                  <i class="fa fa-chevron-right"></i>
              <% end %>

            </div>

          </div>
          <div class="etc-login-form">
            <p>forgot your password? <a href="#" id="forgotPass" >click here</a></p>
            <p>new user? <a href="#" id="newUser">create new account</a></p>
          </div>

        </form>
      </div>
    </div>
<% end %>


<!-- end:Main Form -->


